<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image with Heart Icon Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <!-- Main Image -->
            <ImageView
                android:id="@+id/destinationIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/matara1" />

            <!-- Bookmark Icon in Top-Right Corner -->
            <ImageView
                android:id="@+id/bookmarkIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:src="@drawable/icon_heart"
                android:background="@drawable/white_circle_background"
                android:padding="5dp" />
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/destinationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matara"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp" />

        <!-- Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@android:drawable/ic_menu_mylocation"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/destinationLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tekerghat, Sunamganj"
                android:textSize="12sp"
                android:textColor="#888888" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
